  .yui3-widget-bd

// lock overlay
#lock-overlay.prompt-overlay.yui3-overlay-loading
  form
    .yui3-widget-hd Lock as read-only
    .yui3-widget-bd
      div
        h4 Which level should be locked?
        p
          label
            input(type='radio', id='lock_type_1', name='lock_type', value='1')
            | Server
          label
            input(type='radio', id='lock_type_2', name='lock_type', value='2')
            | Page
          label
            input(type='radio', id='lock_type_3', name='lock_type', value='3', checked='checked')
            | Template
        h4.spacer-1 Why?
        p
          textarea(id='lock_msg', required)
    .yui3-widget-ft.clearfix
      div.right
        button.button(id='lock_cancel') Cancel
        button.button(type='submit', id='lock_submit') Submit

// push overlay
#push-overlay.prompt-overlay.yui3-overlay-loading
  form
    .yui3-widget-hd Ask for a push
    .yui3-widget-bd
      .step-1
        h4 Ticket number related to your query
        p
          input(type='text', id='push_ticket', name='push_ticket', placeholder='123456', required)
        h4.spacer-1 When?
        p
          input(type='text', id='push_datetime', name='push_datetime', placeholder='21-12-2012 14:30', required)
        h4.spacer-1 What?
        p
          label
            input(type='checkbox', id='push_pages', name='push_pages')
            | Page
            br
          label
            input(type='checkbox', id='push_folder', name='push_folder')
            | Folder
          label#push_folder_group_container(style='display:none;')
            input(type='checkbox', id='push_folder_group', name='push_folder_group')
            | With group?

        h4.spacer-1 Any comment?
        p
          textarea(id='push_msg')
      .step-2
        h4 Which files do you want to deliver?
        ul.list
          
    .yui3-widget-ft.clearfix
      div.right
        button.button(id='push_cancel')
          span Cancel
        button.button(id='push_previous', style='display:none;')
          span Previous
        button.button(type='submit', id='push_submit')
          span Next