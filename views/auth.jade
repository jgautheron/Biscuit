// login page
section.biscuit-auth
  div.logo
    h1
  div.credentials
    form(method='post')
      input.form-field.big(placeholder='Login',type='text',name='user',required)
      br
      // quick improvisation to have a working form
      br
      input.form-field.big(placeholder='Password',type='password',name='password',required)
      br
      br
      br
      button.button.big.blue(type='submit') Biscuisation
      br
      br
//      a.blue-link Forgot your credentials?

- if (typeof error !== "undefined")
  div.biscuit-error
    - if (error == "ERROR_INVALID_RIGHTS")
      span Invalid rights tied to this account
    - if (error == "ERROR_INVALID_ID")
      span Authentication Failed
    - if (error == "ERROR_UNAUTHORIZED_ACCESS")
      span Insufficient rights