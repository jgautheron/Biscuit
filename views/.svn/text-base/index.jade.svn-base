// loading block
section.biscuit-loading
  div
    h1= 'Biscuit'
    h2= 'loading'
    .spinner

.main-wrapper
  header
    span welcome to biscuit
  .biscuit-tabs
    .new &nbsp;
    ul

  nav.biscuit-toolbar
    ul.biscuit-breadcrumb
      li.button.active Contents
      li.button Settings
      li.button History
    div.right
      a.button.save
        span
      span.spacer
      a.button.compile
        span
      span.spacer-3
      a.button.push
        span
      span.spacer-2
      a.button »

// server overlay
#server-overlay.yui3-overlay-loading
  .yui3-widget-hd
    span.close
    h6
      span.server.active Pick a server
      span.page Pick a page
  .yui3-widget-bd
    ul.server-list
    ul.page-list

  .yui3-widget-ft
    .recent
      h6 Recent:
      .content
    .search
      input(placeholder='Search…')

// yui3 console
#yconsole

script(src='http://cdn.socket.io/stable/socket.io.js')
script(src='/js/yui-min.js')
:javascript
  | var Biscuit = {};
  | Biscuit.Locator = #{locator};
script(src='/js/Biscuit.js')
