.form-field {
    outline:0;
    font-family:arial;
}

.form-field {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}

.form-field.big {
    -webkit-border-radius:5px;
    font-size:18px;
    padding:5px 10px;
    border:1px inset rgba(164, 212, 239, .6);
    width:27%;
    /*-webkit-box-shadow: inset 0 1px 10px 0px #9bd7f7;*/
    /*-webkit-box-shadow: 1px 1px 0 0 #fff, 0px 0px 30px 2px #ccc inset;*/
}

.biscuit-auth {

    input::-webkit-input-placeholder, isindex::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
        color: darkGray;
    }

    display:-webkit-box;
    -webkit-box-pack:center;
    -webkit-box-orient:vertical;
    -webkit-box-align:stretch;
    text-align:center;
    -webkit-box-flex:1;
    background:#114F8D url(../images/biscuit-bg.jpg) no-repeat center center;

    h1 {
        background:url(@image_logo_big) no-repeat center center;
        display:block;
        margin:0 auto;
        width:511px;
        height:241px;
        position:relative;
        top:0px;
    }

    .logo {
        margin:40px 0 30px 0;
    }

    .form-field {
        padding:8px;
        border:0;
        -webkit-border-radius:8px;
        border:1px inset #77e1ff;
        -webkit-box-shadow: 0 -2px 5px -5px #77e1ff,
                            0px 0px 0px 1px #19729f,
                            0px 2px 0px 0px #60b1dc;
        background:#999 -webkit-gradient(linear, left bottom, left top, color-stop(0.8, #fff), color-stop(1, rgba(255,255,255,.2))) no-repeat;
    }

    .form-field:focus {
        border:1px solid #56daff;
        background:#999 -webkit-gradient(linear, left bottom, left top, color-stop(0.2, #fff), color-stop(1, rgba(173,237,255, 1))) no-repeat;
        -webkit-box-shadow:0 0 2px #000,
                           0 2px 10px 1px #77e1ff,
                           0 2px 30px #56daff;

        -webkit-transition-property:-webkit-box-shadow;
        -webkit-transition-duration:0.3s;
    }

    .button.blue {
        background:#116eb3 -webkit-gradient(linear, left bottom, left top, color-stop(0, #116eb3), color-stop(1, #1d87c4)) no-repeat;
        border:1px solid #05508b;
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        color:#fff;
        font-size:18px;
        text-shadow: rgba(0, 0, 0, 0.4) 0 -1px 0px;
        padding:10px 15px;
        -webkit-border-radius:8px;
        -webkit-box-shadow:inset 0 1px 0 0px #2498cb, 0 1px 0 0px #60b1dc;
    }

    .button.blue:hover {
        background:#116eb3 -webkit-gradient(linear, left bottom, left top, color-stop(0, #196298), color-stop(1, #1d87c4)) no-repeat;
        -webkit-box-shadow:inset 0 1px 0 0px #2498cb, 0 1px 0 0px #60b1dc;
        text-shadow:0px 1px 0px #000;
        color:#fff;
        border:1px solid #196298;
    }


    .button.blue:active {
        background:#ca9e46 -webkit-gradient(linear, left bottom, left top, color-stop(0, #ca9e46), color-stop(1, #f3eb80)) no-repeat;
        border:1px solid transparent;
        color:#363127;
        text-shadow: rgba(255, 255, 255, 1) 0 1px 0px;
        -webkit-box-shadow:0 0 1px 0 #4f3400, inset 0 1px 0px 1px #f9f6bc;
    }

    .blue-link {
        text-shadow: rgba(0, 0, 0, 0.4) 0 1px 2px;
        font-size: 11px;
        color: #95C9EB;
    }

    .blue-link:hover {
        color:#fff;
        cursor:pointer;
    }

}
