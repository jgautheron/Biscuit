/* top toolbar */
.biscuit-toolbar {
    background-image:-webkit-gradient(linear, left bottom, left top, color-stop(0, rgb(206,217,225)), color-stop(1, rgb(228,234,238)));
    padding:5px;
    border-bottom:1px solid #b3c5d1;
    /*-webkit-box-shadow: 0px 6px 10px 0 #cad7e0;*/
    position:relative;
    z-index:5;
    min-height:1.8em;

    .biscuit-breadcrumb {
        display:inline-block;
    }

    .biscuit-breadcrumb:after {
        content:' ';
        padding-right:.8em;
    }

    .spacer {
        margin:0 2px;
    }

    .spacer-2 {
        margin:0 5px;
    }

    .spacer-3 {
        margin:0 10px;
    }

    .version {
        display:inline-block;
        position:relative;
        .icon {
            background:url(@image_documents) no-repeat center center;
            -webkit-background-size:100%;
            width:.8em;
            height:.8em;
            margin-right:2px;
            position:absolute;
            top:7px;
            left:10px;
        }
        select {
            -webkit-appearance:none;
            -webkit-border-radius:5px;
            border:1px solid #b3c5d1;
            font:normal .8em DroidSans;
            color:#435d6f;
            background-image:-webkit-gradient(linear, left bottom, left top, color-stop(0, rgba(227,234,238,1)), color-stop(1, rgba(242,245,247,1)));
            padding:2px 2px 2px 20px;
            -webkit-box-shadow:inset 0 0 7px rgba(0, 0, 0, 0.2);
            outline:0;
            &:hover {
                background-image:none;
                background-color:#f3f3f3;
            }
        }
    }
}
