.biscuit-tabs {
    height:82px;
    background:-webkit-gradient(linear, left bottom, left top, color-stop(0, rgb(219,219,219)), color-stop(0.04, rgb(233,233,233)), color-stop(0.5, rgb(246,251,255))) no-repeat;
    border-bottom:1px solid #fff;

    ul {
        white-space:nowrap;

        li {
            height:66px;
            display:inline-block;
            padding:15px 40px 0 25px;
            border-right:1px solid #dbdbdb;
            border-top:1px solid transparent;

            h3, h4 {
                cursor:pointer;
            }

            h3 {
                font-size:16px;
                text-align:center;
            }

            h3:active, h4:active {
                position:relative;
                top:1px;
            }

            h4 {
                font-size:11px;
            }
        }

        li:not(.active):not([data-server]) {
            background:url(@image_click_start) no-repeat center center;
            background-size:30%;
            border-right:1px solid #dbdbdb;
            color:#777;
            cursor:pointer;
        }

        li:not(.active) * {
            opacity:.5;
        }

        li:not(.active):hover {
            background:-webkit-gradient(radial, center bottom, 200, center bottom, -100, from(rgba(197, 197, 197, .5)), to(rgba(255, 255, 255, .5)));
        }

        li.active {
            background:-webkit-gradient(linear, left bottom, left top, color-stop(0, rgb(228,234,238)), color-stop(0.5, rgb(246,251,255))) no-repeat;
            border-bottom:1px solid #e4eaee;
            border-left:1px solid #fff;
            position:relative;
        }

        li.active.selection {
            /*-webkit-box-shadow: inset 0 50px 50px 10px #9bd7f7;*/
            -webkit-box-shadow: inset 0 50px 150px -50px #9bd7f7;
        }

        li.active .close {
            display:block;
            cursor:pointer;
            width:25px;
            height:25px;
            background:url(@image_close) no-repeat center center;
            background-size:100%;
            position:absolute;
            right:7px;
            top:11px;
        }

        li.active .close:hover {
            background-image:url(@image_close_hover);
        }
    }

    .new {
        float:right;
        border-left:1px solid #dbdbdb;
        width:5em;
        height:100%;
        background:url(@image_plus) no-repeat center center;
        background-size:40%;
        cursor:pointer;
        position:relative;
    }

    .new:hover {
        background-color:rgba(255, 255, 255, 0.3);
        -webkit-box-shadow:inset 0 0 15px rgba(0, 0, 0, 0.2);
    }
}
